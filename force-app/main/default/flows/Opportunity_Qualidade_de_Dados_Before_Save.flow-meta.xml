    <environments>Default</environments>
    <formulas>
        <name>verificaAmountECloseDate</name>
        <dataType>Boolean</dataType>
        <expression>OR( ISBLANK($Record.Amount), ISBLANK($Record.CloseDate) )</expression>
    </formulas>
    <formulas>
        <name>verificaStages</name>
        <dataType>Boolean</dataType>
        <expression>OR( ISPICKVAL($Record.StageName, &quot;Qualification&quot;), ISPICKVAL($Record.StageName, &quot;Proposal&quot;), ISPICKVAL($Record.StageName, &quot;Negotiation/Review&quot;) )</expression>
